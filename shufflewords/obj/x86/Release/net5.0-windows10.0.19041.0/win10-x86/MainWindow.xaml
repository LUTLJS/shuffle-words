<Window
    x:Class="shufflewords.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:shufflewords"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel x:ConnectionId='2' x:Name="contentPanel" Orientation="Horizontal" Margin="120, 30, 0, 0">
        <StackPanel x:ConnectionId='3' x:Name="inputPanel">
            <TextBox x:ConnectionId='6' x:Name="textInput" Header="paste your text below" AcceptsReturn="True" TextWrapping="Wrap"
                     Height="300" Width="300" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            <Button x:ConnectionId='7' x:Name="inputButton"                           >shuffle</Button>
        </StackPanel>
        <StackPanel x:ConnectionId='4' x:Name="outputPanel" Margin="120,0,0,0">
            <TextBox x:ConnectionId='5' x:Name="textOutput" Header="shuffled results" AcceptsReturn="True" TextWrapping="Wrap"
                     Height="300" Width="300" ScrollViewer.VerticalScrollBarVisibility="Auto"
                     ></TextBox>
        </StackPanel>

    </StackPanel>
    

</Window>

